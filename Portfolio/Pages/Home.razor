        return base.OnInitializedAsync();
    }
    private async Task CallRepeaterAsync()
    {
        await Repeat(1, 1, 100, 1, 1);
        await Task.Delay(1000);
        await Repeat(1, 100, 300, 1, 1);
        await Task.Delay(1000);
    }
    public async Task Repeat(int time, int start, int end, int step, int order)
    {
        for (int i = start; i < end; i += step)
        {
            await Task.Delay(time);
            v1 = i;
            StateHasChanged();
        }
    }
}
